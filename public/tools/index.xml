      <guid>https://example.com/tools/smart-brewer/</guid>
      <description>&lt;section id=&#34;smart-brew-timer&#34;&gt;
    &lt;h2&gt;Smart Brew Timer&lt;/h2&gt;
    
    &lt;label for=&#34;saved-recipe-timer&#34;&gt;Load a Saved Recipe:&lt;/label&gt;
    &lt;select id=&#34;saved-recipe-timer&#34;&gt;
        &lt;option value=&#34;&#34;&gt;-- Select a Recipe --&lt;/option&gt;
    &lt;/select&gt;
    &lt;button id=&#34;delete-timer-recipe&#34;&gt;Delete Selected Recipe&lt;/button&gt;
    
    
    &lt;label for=&#34;ratio&#34;&gt;Coffee-to-Water Ratio:&lt;/label&gt;
    &lt;input type=&#34;text&#34; id=&#34;ratio&#34; value=&#34;1:16&#34; /&gt;

    &lt;label for=&#34;coffee-amount&#34;&gt;Coffee Amount (g):&lt;/label&gt;
    &lt;input type=&#34;number&#34; id=&#34;coffee-amount&#34; /&gt;

    &lt;label for=&#34;water-amount&#34;&gt;Water Amount (ml):&lt;/label&gt;
    &lt;input type=&#34;number&#34; id=&#34;water-amount&#34; /&gt;

    &lt;label for=&#34;brew-time-minutes&#34;&gt;Brew Time:&lt;/label&gt;
    &lt;input type=&#34;number&#34; id=&#34;brew-time-minutes&#34; min=&#34;0&#34; step=&#34;1&#34; placeholder=&#34;Min&#34; /&gt;
    &lt;input type=&#34;number&#34; id=&#34;brew-time-seconds&#34; min=&#34;0&#34; max=&#34;59&#34; step=&#34;1&#34; placeholder=&#34;Sec&#34; /&gt;

    &lt;label for=&#34;bloom-time&#34;&gt;Bloom Time (Seconds):&lt;/label&gt;
    &lt;input type=&#34;number&#34; id=&#34;bloom-time&#34; min=&#34;0&#34; step=&#34;1&#34; value=&#34;30&#34; /&gt;

    &lt;label for=&#34;pour-steps&#34;&gt;Number of Pouring Steps:&lt;/label&gt;
    &lt;input type=&#34;number&#34; id=&#34;pour-steps&#34; min=&#34;1&#34; max=&#34;5&#34; step=&#34;1&#34; value=&#34;2&#34; /&gt;

    
    &lt;div id=&#34;pour-steps-container&#34;&gt;&lt;/div&gt;

    &lt;button id=&#34;start-timer&#34;&gt;Start Timer&lt;/button&gt;
    &lt;button id=&#34;reset-timer&#34;&gt;Reset&lt;/button&gt;

    
    &lt;div id=&#34;timer-display&#34;&gt;
        &lt;svg width=&#34;200&#34; height=&#34;200&#34;&gt;
            &lt;circle cx=&#34;100&#34; cy=&#34;100&#34; r=&#34;90&#34; stroke=&#34;#ddd&#34; stroke-width=&#34;10&#34; fill=&#34;none&#34;&gt;&lt;/circle&gt;
            &lt;circle id=&#34;progress-circle&#34; cx=&#34;100&#34; cy=&#34;100&#34; r=&#34;90&#34; stroke=&#34;green&#34; stroke-width=&#34;10&#34; fill=&#34;none&#34;
                stroke-dasharray=&#34;565.48&#34; stroke-dashoffset=&#34;565.48&#34; stroke-linecap=&#34;round&#34;&gt;&lt;/circle&gt;
        &lt;/svg&gt;
        &lt;p id=&#34;timer-text&#34;&gt;00:00&lt;/p&gt;
        &lt;p id=&#34;brew-step&#34;&gt;Waiting...&lt;/p&gt;
    &lt;/div&gt;

    
    &lt;div id=&#34;water-tracking&#34;&gt;
        &lt;h3&gt;Water Tracking&lt;/h3&gt;
        &lt;p&gt;Poured: &lt;span id=&#34;water-poured&#34;&gt;0&lt;/span&gt; ml / &lt;span id=&#34;water-target&#34;&gt;0&lt;/span&gt; ml&lt;/p&gt;
    &lt;/div&gt;

&lt;/section&gt;

&lt;script src=&#34;https://example.com/js/smart-brewer.js&#34;&gt;&lt;/script&gt;</description>
